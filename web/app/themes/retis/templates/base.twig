{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header bg-primary text-white">
			{% block header %}
				<div class="wrapper container mx-auto flex gap-4 items-center p-2 xl:px-0">
					{# <h1 class="hdr-logo" role="banner">
						<a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
					</h1> #}
					<a class="hdr-logo-link" href="{{site.url}}" rel="home">
            <picture>
              <source media="(min-width: 1024px)" srcset="{{ Image(icon_alt).src|resize(80) }}">
              <img src="{{ Image(icon_alt).src|resize(50) }}" alt="site logo" />
            </picture>
          </a>
					<nav id="nav-main" class="nav-main flex-grow" role="navigation">
						{% include "menu.twig" with {'items': menu.get_items} %}
					</nav><!-- #nav -->
				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{# {% if title %}<h1>{{title}}</h1>{% endif %} #}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer" class="px-2 xl:px-0 bg-primary text-white">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
